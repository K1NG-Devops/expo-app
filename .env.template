# Environment Configuration Template
# Copy this to .env and replace with your actual values
# DO NOT commit .env with real secrets!

EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

EXPO_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project
EXPO_PUBLIC_ENABLE_SENTRY=true
EXPO_PUBLIC_POSTHOG_KEY=your_posthog_key_here
EXPO_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
EXPO_PUBLIC_DEBUG_TOOLS=1
EXPO_PUBLIC_ENABLE_TEST_TOOLS=1

EXPO_PUBLIC_API_BASE=https://your-project.supabase.co/functions/v1
EXPO_PUBLIC_WEBHOOK_PAYPAL_FN=webhooks-paypal
EXPO_PUBLIC_WEBHOOK_PAYFAST_FN=webhooks-payfast

# DO NOT put service role or other server secrets in this file.

# Email (client-visible FROM only)
FROM_EMAIL=noreply@yourdomain.com
EXPO_PUBLIC_FROM_EMAIL=noreply@yourdomain.com

# AdMob Configuration - Replace with your IDs
EXPO_PUBLIC_ADMOB_ANDROID_APP_ID=ca-app-pub-your-id~your-app-id
EXPO_PUBLIC_ADMOB_IOS_APP_ID=ca-app-pub-your-id~your-app-id

# Ad Units (Use test IDs during development)
EXPO_PUBLIC_ADMOB_TEST_IDS_ONLY=true
EXPO_PUBLIC_ENABLE_FREE_TIER_ADS=true

# Development flags
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_DEBUG_MODE=true
EXPO_PUBLIC_DEBUG_SUPABASE=true
EXPO_PUBLIC_EMAIL_ENABLED=true
EXPO_PUBLIC_EMAIL_MOCK_MODE=false

# AI Configuration
EXPO_PUBLIC_AI_ENABLED=true
EXPO_PUBLIC_ENABLE_AI_FEATURES=true
EXPO_PUBLIC_ANTHROPIC_MODEL=claude-3-haiku-20240307
EXPO_PUBLIC_ANTHROPIC_MAX_TOKENS=4000

# AI Feature Flags
EXPO_PUBLIC_AI_LESSON_GENERATION_ENABLED=true
EXPO_PUBLIC_AI_HOMEWORK_GRADING_ENABLED=true
EXPO_PUBLIC_AI_HOMEWORK_HELP_ENABLED=true
EXPO_PUBLIC_AI_STEM_ACTIVITIES_ENABLED=true
EXPO_PUBLIC_AI_PROGRESS_ANALYSIS_ENABLED=true
EXPO_PUBLIC_AI_INSIGHTS_ENABLED=true
EXPO_PUBLIC_AI_CONTENT_MODERATION_ENABLED=true
EXPO_PUBLIC_AI_STREAMING_ENABLED=true

# RevenueCat public SDK keys (no secrets)
EXPO_PUBLIC_REVENUECAT_ANDROID_SDK_KEY=your_android_key_here
EXPO_PUBLIC_REVENUECAT_IOS_SDK_KEY=your_ios_key_here

# Payments bridge pages
EXPO_PUBLIC_PAYMENTS_BRIDGE_URL=https://your-domain.com/payments

# Picovoice Wake Word Configuration
EXPO_PUBLIC_PICOVOICE_ACCESS_KEY=your_picovoice_access_key_here