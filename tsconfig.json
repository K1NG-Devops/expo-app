{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "skipLibCheck": true
  },
  "exclude": [
    "scripts/**/*",
    "supabase/**/*",
    "utils/biometricDebugExtended.ts",
    "temp/**/*",
    "archive/**/*",
    "debug/**/*",
    "tools/**/*",
    "docs/**/*",
    "logs/**/*",
    "*.log",
    "node_modules/**/*"
  ],
  "include": [
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
